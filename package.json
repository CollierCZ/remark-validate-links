{
  "name": "remark-validate-links",
  "version": "7.0.0",
  "description": "Validate links to headings and files in markdown",
  "license": "MIT",
  "keywords": [
    "validate",
    "link",
    "reference",
    "file",
    "heading",
    "remark"
  ],
  "repository": "remarkjs/remark-validate-links",
  "bugs": "https://github.com/remarkjs/remark-validate-links/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "hosted-git-info": "^2.5.0",
    "mdast-util-definitions": "^1.0.0",
    "propose": "0.0.5",
    "remark-slug": "^4.2.1",
    "unist-util-visit": "^1.0.0",
    "urljoin": "^0.1.5",
    "xtend": "^4.0.1"
  },
  "devDependencies": {
    "execa": "^0.10.0",
    "nyc": "^12.0.0",
    "remark": "^9.0.0",
    "remark-cli": "^5.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "strip-ansi": "^4.0.0",
    "tape": "^4.0.0",
    "to-vfile": "^5.0.0",
    "xo": "^0.22.0"
  },
  "scripts": {
    "build-md": "remark *.md -qfo",
    "build": "npm run build-md",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "xo": {
    "space": true,
    "esnext": false,
    "rules": {
      "no-eq-null": "off",
      "eqeqeq": "off",
      "guard-for-in": "off",
      "max-lines": "off",
      "complexity": "off"
    }
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
